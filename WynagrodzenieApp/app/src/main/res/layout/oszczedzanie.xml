<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="krakow.uek.wynagrodzenieapp.Oszczedzanie">

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="502dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/kwotaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Zbierana kwota"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/dochodEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Miesięczny dochód"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/wydatkiEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Miesięczne wydatki"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/obliczButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="oblicz"
            android:text="Oblicz"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp"
            android:background="@drawable/button_blue" style="@style/ButtonText"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aby uzyskać wskazaną kwotę potrzebujesz:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/rezultatZEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/rezultatBezEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
